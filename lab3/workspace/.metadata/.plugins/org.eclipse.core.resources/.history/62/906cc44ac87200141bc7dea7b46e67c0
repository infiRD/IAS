%ifndef IAS_UTILS	; to avoid multiple inclusion
%define IAS_UTILS	;

; ========================================================== ; 
;                           Macros                           ;
; ========================================================== ; 

%macro nl 0
	call WriteNewLine
%endmacro

%macro putchar 1
	push EAX
	mov AL, %1
	call WriteChar
	pop EAX
%endmacro

%macro write 1
	push ESI
	mov ESI, %1
	call WriteString
	pop ESI
%endmacro

%macro writeln 1
	write %1
	nl
%endmacro

%macro iwrite 1
	push EAX
	mov EAX, %1
	call WriteInt32
	pop EAX
%macro iwrite 1

%macro iwriteln 1
	iwrite %1
	ln
%macro iwriteln 1

; ========================================================== ; 
;                          Variables                         ;
; ========================================================== ; 

[section .data use32 class=DATA] 	


; ========================================================== ; 
;                         Functions                          ;
; ========================================================== ; 

[section .checker use32 class=CODE] 	


%endif				; to avoid multiple inclusion
	